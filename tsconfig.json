{
  "compilerOptions": {
    "target": "es2022",
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "checkJs": true,
    "lib": ["dom", "es2022"],
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "strict": false,
    "plugins": [
      {
        "name": "typescript-strict-plugin"
      }
    ]
  },
  "include": [
    "app.js",
    "models/**/*",
    "routes/**/*",
    "support/**/*",
    "test/**/*"
  ]
}
