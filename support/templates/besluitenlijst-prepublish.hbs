<div class="au-c-template au-c-template--decision besluiten" prefix="{{prefixes}}">
  <div about="{{zitting.uri}}" typeof="besluit:Zitting">
    <span property="http://data.vlaanderen.be/ns/besluit#isGehoudenDoor"
          resource="{{zitting.bestuursorgaan}}"></span>
    <span property="http://data.vlaanderen.be/ns/besluit#geplandeStart"
          content="{{zitting.geplandeStart}}"
          datatype="http://www.w3.org/2001/XMLSchema#dateTime"></span>
    {{#each besluitenlijst as |besluiten|}}
      {{#each besluiten as |besluit|}}
        <div resource="{{besluit.behandeling}}" typeof="besluit:BehandelingVanAgendapunt">
          {{#if besluit.agendapunt}}
            <span property="http://purl.org/dc/terms/subject" resource="{{besluit.agendapunt}}" > </span>
          {{/if}}
          <span
            property="besluit:openbaar"
            datatype="xsd:boolean"
            content="{{besluit.openbaar}}"
            class="au-template-{{#if besluit.openbaar}}public{{else}}private{{/if}}"
          >
          </span>
          {{#if besluit.gebeurtNa}}
            <span property="besluit:gebeurtNa" resource="{{besluit.gebeurtNa.objec}}"> </span>
          {{/if}}
          <div property="prov:generated" resource="{{besluit.besluit}}" typeof="{{besluit.besluitTypes}}">
            <h3 property="eli:title">
              {{#if besluit.title}}{{besluit.title.object}}{{/if}}
            </h3>
            <p property="eli:description">{{#if besluit.description}}{{description.object}}{{/if}}</p>
          </div>
          {{#if besluit.stemmingen.length}}
            <h3>Stemmingen</h3>
              {{#each besluit.stemmingen as |stemming|}}
                <div class="c-template-content c-template-content--voting" typeof="http://data.vlaanderen.be/ns/besluit#Stemming" resource="{{stemming.stemmingUri.value}}" property="besluit:heeftStemming">
                  <p>
                    <strong>Onderwerp:</strong>
                    <span property="besluit:onderwerp">{{stemming.onderwerp.value}}</span>,
                  </p>
                  <p>
                    <strong>Gevolg:</strong>
                    <span property="besluit:gevolg">{{stemming.gevolg.value}}</span>
                  </p>
                </div>
              {{/each}}
            {{/if}}
          {{/each}}
        {{/each}}
      </div>
    </div>
  </div>
</div>
